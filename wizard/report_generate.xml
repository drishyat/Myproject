<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record model="ir.ui.view" id="report_generate_wizard">
        <field name="name">hotel.generate.report.wizard.form</field>
        <field name="model">hotel.generate.report.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Generate Report">
                    <group class="oe_title">
                        <field name="guest_id" options="{'no_create_edit': True}" />
                        <field name="from_date"/>
                        <field name="to_date"/>

                    </group>
                <footer>
                    <button name ="generate"
                            type="object"
                            string="Generate"
                            class="oe_highlight"/>
                    <button name="cancel"
                            string="Cancel"
                            special="cancel"
                            type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
      <record id="generate_report_action" model="ir.actions.act_window">
            <field name="name">Generate Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hotel.generate.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="report_generate_wizard"/>
            <field name="target">new</field>
        </record>
</odoo>