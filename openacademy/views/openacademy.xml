<?xml version="1.0" encoding="utf-8"?>
<odoo>
      <record model="ir.ui.view" id="course_list_view">
      <field name="name">course.list</field>
      <field name="model">openacademy.course</field>
      <field name="arch" type="xml">
        <tree string="Course List">
          <field name="name"/>
          <field name="responsible_id"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="course_search_view">
      <field name="name">course.search</field>
      <field name="model">openacademy.course</field>
      <field name="arch" type="xml">
        <search>
            <field name=""></field>
          <field name="name"/>
         <field name="responsible_id"/>
        </search>
      </field>
    </record>
     <record model="ir.ui.view" id="course_form_view">
      <field name="name">course.form</field>
      <field name="model">openacademy.course</field>
      <field name="arch" type="xml">
        <form string="Course List">
            <sheet>
                <group>
                    <field name="name"/>
<!--                    <field name="responsible_id"/>-->
                </group>
                <notebook>
                    <page string="Description">
                        <field name="description"/>
                    </page>
                    <page string="All session Information">
                        <field name="session_ids">
                            <tree>
                                <field name="name"/>
                                <field name="instuctor_id"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet>
        </form>
      </field>
    </record>
    <record model="ir.actions.act_window" id="course_list_action">
        <field name="name">Courses</field>
        <field name="res_model">openacademy.course</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">create first course</p>
        </field>
    </record>
     <record model="ir.actions.act_window" id="session_list_action">
        <field name="name">Sessions</field>
        <field name="res_model">openacademy.session</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">create first session</p>
        </field>
    </record>
    <record model="ir.ui.view" id="session_list_view">
      <field name="name">session.list</field>
      <field name="model">openacademy.session</field>
      <field name="arch" type="xml">
        <tree string="Session List">
          <field name="name"/>
          <field name="date"/>
            <field name="duration"/>
            <field name="seats"/>
             <field name="instuctor_id"/>
             <field name="course_id"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="session_form_view">
      <field name="name">session.form</field>
      <field name="model">openacademy.session</field>
      <field name="arch" type="xml">
        <form string="Session List">
            <sheet>
                <group>
                    <group string="General">
                        <field name="instuctor_id"/>
                        <field name="course_id"/>
                        <field name="trial_field" position="attributes">
                        <attribute name = "attrs">{'invisible':[('1','!=',True)]}</attribute>
                        </field>
                        <field name="name"/>
                    </group>
                    <group string="details">
                        <field name="date"/>
                        <field name="duration"/>
                        <field name="seats"/>
                    </group>
                </group>
                <label for = "attendee_id"/>
                <field name="attendee_id" widget="many2many_tags"></field>
            </sheet>
        </form>
      </field>
    </record>
    <menuitem id="main_openacademy_menu" name="Open Academy"></menuitem>
    <menuitem id ="openacademy_menu" name="Open Academy" parent="main_openacademy_menu"></menuitem>
    <menuitem id="courses_menu" name="Courses" parent="openacademy_menu" action="course_list_action"></menuitem>
    <menuitem id="session_menu" name="Session" parent="openacademy_menu" action="session_list_action"></menuitem>
</odoo>