<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record model="ir.actions.act_window" id="room_list_action">
        <field name="name">Rooms</field>
        <field name="res_model">hotel.room</field>
        <field name="view_mode">tree,form,search</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create first room</p>
        </field>
    </record>
    <record model="ir.ui.view" id="room_search_view">
        <field name="name">room.search</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <search>
                <field name="bed_type"/>
                <separator/>
                <filter string="Avaliable rooms" name="room_state"
                        domain="[('state','=','avaliable')]"></filter>
                <group expand="1" string="Group By">
                    <filter string="Room Type" name="type"
                            context="{'group_by':'bed_type'}"></filter>
                </group>
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="room_list_view">
        <field name="name">rooms_menu</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <tree string="Room List">
                <field name="room_number_id"/>
                <field name="bed_type"/>
                <field name="avaliable_bed"/>
                <field name="facility_ids"/>
                <field name="currency_id"/>
                <field name="rent"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="room_form_view">
        <field name="name">Room Form</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <form string="Room List">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="avaliable,not_avaliable"/>
                </header>
                <sheet>
                    <group>
                        <group string="General">
                            <field name="room_number_id"
                                   options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="bed_type"
                                   options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="avaliable_bed"
                                   attrs="{'invisible': [('bed_type', '!=', 'dormitory')]}"/>
                        </group>
                        <group string="details">
                            <field name="facility_ids" widget="many2many_tags"
                                   options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="rent" class="oe_inline"
                                   widget="monetary"
                                   options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record model="ir.actions.act_window" id="facility_list_action">
        <field name="name">Facility type</field>
        <field name="res_model">hotel.facility</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.ui.view" id="facility_list_view">
        <field name="name">facility_menu</field>
        <field name="model">hotel.facility</field>
        <field name="arch" type="xml">
            <tree string="Facility" editable="bottom">
                <field name="facility"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="room_number_list_action">
        <field name="name">Room type</field>
        <field name="res_model">hotel.number</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.ui.view" id="room_number_list_view">
        <field name="name">room_number_menu</field>
        <field name="model">hotel.number</field>
        <field name="arch" type="xml">
            <tree string="Room Number" editable="bottom">
                <field name="room_no"/>
                <!--         <field name="room_type"/>-->
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="accomodation_list_action">
        <field name="name">Accomodation</field>
        <field name="res_model">hotel.accomodation</field>
        <field name="view_mode">tree,form,search</field>
        <field name="context">{'search_default_today_expected_filter':1}
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">create first accomodation
            </p>
        </field>
        <field name="res_model">hotel.accomodation</field>
        <field name="view_mode">tree,form,search</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">create first accomodation
            </p>
        </field>
    </record>
    <record model="ir.ui.view" id="accomodation_search_view">
        <field name="name">accomodation.search</field>
        <field name="model">hotel.accomodation</field>
        <field name="arch" type="xml">
            <search>
                <field name="room_id"/>
                <field name="guest_id"/>
                <field name="accomodation_id"/>
                <separator/>
                <filter string="Check In" name="check_in_filter"
                        domain="[('state','=','check_in')]"/>
                <filter string="States" name="states_filter"
                        domain="[('state','!=','cancel')]"/>
                <filter string="Current Date Checkouts" name="check_out_filter"
                        domain="[('check_out','&lt;=',
                    (datetime.date.today()).strftime('%Y-%m-%d')),('check_out',
                    '&gt;=',(datetime.date.today()).strftime('%Y-%m-%d')),
                    ('state','!=','cancel')]"/>
                <filter string="Next Day Expecting Checkouts"
                        name="next_day_check_out"
                        domain="[('expected_date','&gt;=',
                    ((context_today()+datetime.timedelta(days=1)).
                    strftime('%Y-%m-%d'))),('expected_date','&lt;=',
                    ((context_today()+datetime.timedelta(days=1)).
                    strftime('%Y-%m-%d'))),('state','!=','check_out'),
                    ('state','!=','cancel')]"/>
                <filter string="Today Expecting Checkouts"
                        name="today_expected_filter"
                        domain="[('expected_date','&lt;=',
                    (datetime.date.today()).strftime('%Y-%m-%d')),
                    ('expected_date','&gt;=',
                    (datetime.date.today()).strftime('%Y-%m-%d')),
                    ('state','!=','check_out'),('state','!=','cancel')]"/>
                <group expand="1" string="Group By">
                    <filter string="Room" name="room"
                            context="{'group_by':'room_id'}"></filter>
                    <filter string="Room Type" name="room_type"
                            context="{'group_by':'bed_id'}"></filter>
                    <filter string="Room Status" name="room_state"
                            context="{'group_by':'state'}"></filter>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="accomodation_list_view">
        <field name="name">accomodation_menu</field>
        <field name="model">hotel.accomodation</field>
        <field name="arch" type="xml">

            <tree string="Accomodation List"
                  decoration-warning="(state not in ('cancel')) and
                  warning_date==True"
                  decoration-danger="(state in ('check_out','invoice')) and
                  warning_date==True">
                <field name="accomodation_id"/>
                <field name="guest_id"/>
                <field name="room_id"/>
                <field name="bed_id" optional="True"/>
                <field name="state"/>
                <field name="current_date" invisible="1"/>
                <field name="warning_date" invisible="1"/>
                <field name="expected_date"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="accomodation_form_view">
        <field name="name">accomodation.form</field>
        <field name="model">hotel.accomodation</field>
        <field name="arch" type="xml">
            <form string="Accomodation List">
                <header>
                    <button id="button_check_in" name="action_check_in"
                            string="Check In " type="object" states="draft"
                            class="btn-primary"/>
                    <button id="button_check_out" name="action_check_out"
                            string="Check Out " type="object" states="check_in"
                            class="btn-primary"/>
                    <button id="button_cancel" name="action_cancel"
                            string="Cancel"
                            type="object" states="check_in"/>
                    <button id="button_invoice" name="action_invoice"
                            string="Invoice " type="object" states="check_out"
                            class="btn-primary"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,check_in,check_out,invoiced"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Invoiced"
                            attrs="{'invisible': [
                             ('state', '!=', 'invoiced')]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="accomodation_id" readonly="1"></field>
                        </h1>
                    </div>
                    <group>
                        <group>

                            <field name="guest_id" widget="res_partner_many2one"
                                   context="{'res_partner_search_mode':
                                   'customer','show_address':1}"
                                   options="{&quot;always_reload&quot;:True}"/>
                            <field name="no_of_guest"/>
                        </group>
                        <group>
                            <field name="facility_id" widget="many2many_tags"
                                   options="{'no_create': True,
                                   'no_create_edit':True}"/>
                            <field name="bed_id"/>
                            <field name="room_id"
                                   options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="expected_days"
                                   states="draft,check_in"/>
                            <field name="check_in"
                                   states="draft,check_in,check_out"/>
                            <field name="check_out"
                                   states="draft,check_in,check_out"/>
                            <field name="expected_date"
                                   states="draft,check_in"/>


                        </group>
                    </group>
                    <notebook>
                        <page name="guest info" string="Guest Information">
                            <field name="guest_line" mode="tree,kanban"
                                   attrs="{'readonly': [('state', 'in',
                               ('check_in','check_out','cancel'))]}"
                                   id="hotel.guest.line">
                                <tree string="Guest Info Lines"
                                      editable="bottom">
                                    <control>
                                        <create name="add_guest"
                                                string="Add Guest"/>
                                    </control>
                                    <field name="guest_name"/>
                                    <field name="guest_gender"/>
                                    <field name="guest_age"/>
                                    <field name="guest_id" invisible="1"/>

                                </tree>

                            </field>
                        </page>
                        <page name="payment" string="Payment Information">
                            <field name="payment_line" mode="tree,kanban"
                                   id="hotel.payment.line">
                                <tree string="Payment Info Lines">

                                    <field name="product_id"/>
                                    <field name="description_id"/>
                                    <field name="quantity"/>
                                    <field name="uom"/>
                                    <field name="unit"/>
                                    <field name="sub_total" sum="total"/>


                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <menuitem
            id="main_hotel_room_management_menu"
            name="Hotel Room ">
    </menuitem>
    <menuitem
            id="reception_menu"
            name="Reception"
            parent="main_hotel_room_management_menu"
            sequence="1">

    </menuitem>
    <menuitem
            id="accomodation_menu"
            name="Accomodation"
            parent="reception_menu"
            action="accomodation_list_action"
            sequence="1">
    </menuitem>

    <menuitem id="configuration_menu"
              name="Configuration"
              parent="main_hotel_room_management_menu"
              sequence="3"
              groups="hotel_demo.group_hotel_hadmin"  >

    </menuitem>
    <menuitem id="room_menu"
              name="Room"
              parent="configuration_menu"
              action="room_list_action"
              sequence="5">
    </menuitem>

    <menuitem id="room_number_menu"
              name="Room Number"
              parent="configuration_menu"
              action="room_number_list_action"
              sequence="8">
    </menuitem>
    <menuitem id="facility_menu"
              name="Facility"
              parent="configuration_menu"
              action="facility_list_action"
              sequence="9">
    </menuitem>
     <menuitem id="report_menu"
              name="Reporting"
              parent="main_hotel_room_management_menu"
              sequence="2">

    </menuitem>
    <menuitem id="report_generate_menu"
              name="Report"
              parent="report_menu"
              action="generate_report_action"
              sequence="1">
    </menuitem>
    <menuitem id="xlxs_report_generate_menu"
              name="XLXS Report"
              parent="report_menu"
              action="action_xlsx_report"
              sequence="3">
    </menuitem>

</odoo>